<div class="govuk-form-group">
  {{#isInput}}
    <{{#hasOneQuestion}}h1{{/hasOneQuestion}}{{^hasOneQuestion}}h2{{/hasOneQuestion}} class="govuk-label-wrapper">
      <label class="govuk-label govuk-label--l" for="{{questionId}}">
        {{#i18n}}{{groupStem}}.{{questionId}}.question '{{#questionArgs}}{{#i18n}}{{.}}{{/i18n}} {{/questionArgs}}'{{/i18n}}
      </label>
    </{{#hasOneQuestion}}h1{{/hasOneQuestion}}{{^hasOneQuestion}}h2{{/hasOneQuestion}}>
    <input class="govuk-input govuk-input--width-20" id="{{questionId}}" name="{{questionId}}" type="{{#type}}{{.}}{{/type}}{{^type}}text{{/type}}">
  {{/isInput}}
  {{#isRadioButton}}
    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
      <{{#hasOneQuestion}}h1{{/hasOneQuestion}}{{^hasOneQuestion}}h2{{/hasOneQuestion}} class="govuk-fieldset__heading">
        {{#i18n}}{{groupStem}}.{{questionId}}.question '{{#questionArgs}}{{#i18n}}{{.}}{{/i18n}} {{/questionArgs}}'{{/i18n}}
      </{{#hasOneQuestion}}h1{{/hasOneQuestion}}{{^hasOneQuestion}}h2{{/hasOneQuestion}}>
    </legend>
    <div class="govuk-radios" data-module="govuk-radios">
      {{#values}}
        <div class="govuk-radios__item">
          <input class="govuk-radios__input" id="{{questionId}}" name="{{questionId}}" type="radio" value={{name}}>
          <label class="govuk-label govuk-radios__label" for="{{questionId}}">
            {{#i18n}}{{groupStem}}.{{name}}{{/i18n}}
          </label>
        </div>
      {{/values}}
    </div>
  {{/isRadioButton}}
</div>
